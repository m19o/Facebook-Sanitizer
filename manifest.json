{
  "manifest_version": 3,
  "name": "Remove Reels & Stories",
  "version": "1.0.0",
  "description": "Hides and removes all reels and stories from Facebook feeds",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fb.com/*"
      ],
      "js": ["FBCleaner.js"],
      "run_at": "document_idle"
    }
  ]
}

